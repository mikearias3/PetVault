<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PetVault.Views.LoginPage">
	<ContentPage.Content>
        <StackLayout>
            <Image Source="PetVaultBackground.png" />
            <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="15">
                <Label Text="Usuario" TextColor="Gray" FontSize="Small" />
                <Entry />
                <Label Text="Contraseña" TextColor="Gray" FontSize="Small" />
                <Entry />
                <Button Text="Iniciar Sesión" BackgroundColor="#6c9d20" TextColor="White" HorizontalOptions="FillAndExpand" />
            </StackLayout>
            <StackLayout VerticalOptions="End">
                <Button Text="¿Olvidaste tu contraseña? Haz click aquí" BackgroundColor="Transparent" TextColor="Gray" FontSize="Small" HorizontalOptions="FillAndExpand" Clicked="LoginButtonClicked" />
            </StackLayout>
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
