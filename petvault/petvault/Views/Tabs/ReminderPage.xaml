<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Recordatorios" 
             Icon="reminderbar"
             xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="petvault.Views.Tabs.ReminderPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="plus" Command="{Binding OnAddReminderCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="20">
            <ListView x:Name="listView" 
                      ItemsSource="{Binding Reminders}" 
                      RowHeight="60" 
                      SeparatorVisibility="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout Orientation="Horizontal" Spacing="5">
                                    <Image Source="reminder" VerticalOptions="Center" />
                                    <StackLayout Orientation="Vertical" VerticalOptions="Center">
                                        <Label Text="{Binding Title}" />
                                        <Label Text="{Binding Date}" />
                                    </StackLayout>                
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
